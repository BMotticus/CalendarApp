# Routes
# ~~~~

# Home page
GET             /                                                            controllers.Application.index
GET             /bmApp/signUp                                                      controllers.Application.signUp
POST            /bmApp/signUp                                                      controllers.Application.doSignUp
GET             /bmApp/userInfo/:userId                                            controllers.Application.userInfo(userId: Long)
GET             /bmApp/contact                                                     controllers.Application.contact
POST            /bmApp/contact                                                     controllers.Application.doContact     
GET             /bmApp/thankYou                                                    controllers.Application.thankYou(confirm: Long, message: String, title: String, tab: String)                   
GET             /bmApp/schedule                                                    controllers.Application.schedule
GET             /bmApp/messegeBoard                                                controllers.Application.messageBoard
GET             /bmApp/signIn                                                      controllers.Application.signIn(path: String ?= "")
POST            /bmApp/signIn                                                      controllers.Application.doSignIn     
GET             /bmApp/signOut                                                     controllers.Application.signOut

GET             /clientSignIn                                                controllers.Application.clientSignIn
GET             /clientRedirect                                              controllers.Application.clientRedirect

GET             /ws                                                          controllers.Messanger.webSocket

# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file                                                controllers.Assets.versioned(path="/public", file: Asset)

GET             /assets/*file                                                controllers.Assets.at(path="/public", file)

